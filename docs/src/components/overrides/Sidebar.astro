---
/**
 * Custom Sidebar with glassmorphism design
 * Wraps the default Starlight sidebar with custom styling
 */
import type { Props } from "@astrojs/starlight/props";
import Default from "@astrojs/starlight/components/Sidebar.astro";
---

<div class="custom-sidebar-wrapper">
  <nav class="custom-sidebar" aria-label="Main">
    <Default {...Astro.props}><slot /></Default>
  </nav>
</div>

<style>
  .custom-sidebar-wrapper {
    height: 100%;
    padding: 0.75rem;
  }

  .custom-sidebar {
    background: rgba(17, 17, 24, 0.6);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    padding: 1rem;
    height: calc(100% - 1.5rem);
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: rgba(255, 255, 255, 0.1) transparent;
  }

  .custom-sidebar::-webkit-scrollbar {
    width: 6px;
  }

  .custom-sidebar::-webkit-scrollbar-track {
    background: transparent;
  }

  .custom-sidebar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  .custom-sidebar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  /* Override nested sidebar styles */
  .custom-sidebar :global(nav[aria-label="Main"]) {
    padding: 0;
    background: transparent;
  }

  .custom-sidebar :global(ul) {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .custom-sidebar :global(li) {
    margin: 0;
  }

  /* Section headers */
  .custom-sidebar :global(summary),
  .custom-sidebar :global(.group-label) {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--sl-color-gray-4);
    padding: 0.5rem 0.5rem 0.25rem;
    margin-top: 0.75rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .custom-sidebar :global(summary:first-of-type),
  .custom-sidebar :global(.group-label:first-of-type) {
    margin-top: 0;
  }

  /* Links */
  .custom-sidebar :global(a) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    margin: 0.125rem 0;
    border-radius: 10px;
    font-size: 0.875rem;
    color: var(--sl-color-gray-3);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .custom-sidebar :global(a:hover) {
    color: var(--sl-color-text);
    background: rgba(129, 140, 248, 0.1);
  }

  /* Active link */
  .custom-sidebar :global(a[aria-current="page"]),
  .custom-sidebar :global(a[aria-current="true"]) {
    color: var(--sl-color-accent-high);
    background: rgba(129, 140, 248, 0.15);
    font-weight: 500;
    border-left: 2px solid var(--sl-color-accent);
    padding-left: calc(0.75rem - 2px);
    border-radius: 0 10px 10px 0;
  }

  /* Nested items */
  .custom-sidebar :global(ul ul) {
    padding-left: 0.75rem;
    margin-left: 0.25rem;
    border-left: 1px solid rgba(255, 255, 255, 0.06);
  }

  .custom-sidebar :global(ul ul a) {
    font-size: 0.8125rem;
    padding: 0.375rem 0.75rem;
  }

  /* Badges */
  .custom-sidebar :global(.sl-badge) {
    font-size: 0.625rem;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-weight: 500;
    margin-left: auto;
  }

  /* Light mode adjustments */
  :root[data-theme="light"] .custom-sidebar {
    background: rgba(249, 250, 251, 0.9);
    border-color: rgba(0, 0, 0, 0.06);
  }
</style>
