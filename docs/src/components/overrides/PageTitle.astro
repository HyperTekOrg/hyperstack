---
/**
 * Custom PageTitle with Copy Markdown button
 *
 * Adds a "Copy Markdown" button next to the page title that copies
 * the raw markdown content directly from the content entry.
 * Works in both dev and production modes.
 */
import type { Props } from "@astrojs/starlight/props";
import Default from "@astrojs/starlight/components/PageTitle.astro";

const { entry } = Astro.locals.starlightRoute;
const { title } = entry.data;

// Build clean markdown content with title
const markdownContent = `# ${title}\n\n${entry.body}`;
---

<div class="page-title-wrapper">
  <Default {...Astro.props}><slot /></Default>
  <div class="page-actions">
    <button
      class="copy-markdown-btn"
      id="copy-markdown"
      data-content={markdownContent}
      title="Copy page as Markdown"
    >
      <svg
        class="icon-copy"
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path
          d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"
        ></path>
        <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
      </svg>
      <svg
        class="icon-check"
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="20 6 9 17 4 12"></polyline>
      </svg>
      <span class="btn-text">Copy Markdown</span>
    </button>
  </div>
</div>

<style>
  .page-title-wrapper {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
  }

  .page-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .copy-markdown-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.75rem;
    font-size: 0.8rem;
    font-weight: 500;
    font-family: var(--sl-font);
    color: var(--sl-color-gray-2);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .copy-markdown-btn:hover {
    color: var(--sl-color-white);
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.15);
  }

  .copy-markdown-btn.copied {
    color: #10b981;
    border-color: rgba(16, 185, 129, 0.3);
    background: rgba(16, 185, 129, 0.1);
  }

  .copy-markdown-btn .icon-check {
    display: none;
  }

  .copy-markdown-btn.copied .icon-copy {
    display: none;
  }

  .copy-markdown-btn.copied .icon-check {
    display: block;
  }

  /* Light mode */
  :root[data-theme="light"] .copy-markdown-btn {
    color: var(--sl-color-gray-3);
    background: rgba(0, 0, 0, 0.03);
    border-color: rgba(0, 0, 0, 0.1);
  }

  :root[data-theme="light"] .copy-markdown-btn:hover {
    color: var(--sl-color-gray-1);
    background: rgba(0, 0, 0, 0.06);
    border-color: rgba(0, 0, 0, 0.15);
  }

  /* Mobile */
  @media (max-width: 640px) {
    .copy-markdown-btn .btn-text {
      display: none;
    }

    .copy-markdown-btn {
      padding: 0.4rem;
    }
  }
</style>

<script>
  function setupCopyButton() {
    const btn = document.getElementById("copy-markdown") as HTMLButtonElement;
    if (!btn) return;

    btn.addEventListener("click", async () => {
      const content = btn.dataset.content;
      if (!content) return;

      try {
        await navigator.clipboard.writeText(content);
        btn.classList.add("copied");
        const textEl = btn.querySelector(".btn-text");
        if (textEl) textEl.textContent = "Copied!";

        setTimeout(() => {
          btn.classList.remove("copied");
          if (textEl) textEl.textContent = "Copy Markdown";
        }, 2000);
      } catch (err) {
        console.error("Failed to copy:", err);
      }
    });
  }

  // Run on initial load
  setupCopyButton();

  // Re-run on Astro page transitions
  document.addEventListener("astro:page-load", setupCopyButton);
</script>
