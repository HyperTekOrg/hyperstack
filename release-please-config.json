{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "packages": {
    "hyperstack": {
      "release-type": "rust",
      "component": "hyperstack"
    },
    "interpreter": {
      "release-type": "rust",
      "component": "hyperstack-interpreter"
    },
    "hyperstack-macros": {
      "release-type": "rust",
      "component": "hyperstack-macros"
    },
    "cli": {
      "release-type": "rust",
      "component": "hyperstack-cli"
    },
    "rust/hyperstack-sdk": {
      "release-type": "rust",
      "component": "hyperstack-sdk"
    },
    "rust/hyperstack-server": {
      "release-type": "rust",
      "component": "hyperstack-server"
    },
    "typescript/react": {
      "release-type": "node",
      "component": "hyperstack-react"
    },
    "typescript/core": {
      "release-type": "node",
      "component": "hyperstack-typescript"
    },
    "stacks/sdk/typescript": {
      "release-type": "node",
      "component": "hyperstack-stacks"
    },
    "stacks/sdk/rust": {
      "release-type": "rust",
      "component": "hyperstack-stacks"
    }
  },
  "plugins": [
    {
      "type": "cargo-workspace",
      "merge": false
    },
    {
      "type": "node-workspace",
      "merge": false,
      "updatePeerDependencies": false
    },
    {
      "type": "linked-versions",
      "groupName": "hyperstack",
      "components": [
        "hyperstack",
        "hyperstack-interpreter",
        "hyperstack-sdk",
        "hyperstack-macros",
        "hyperstack-cli",
        "hyperstack-server",
        "hyperstack-react",
        "hyperstack-typescript",
        "hyperstack-stacks"
      ]
    }
  ]
}
